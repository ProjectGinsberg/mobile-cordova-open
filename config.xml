<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.scotgov.ginsberg" version="2.0.0" versionCode="2.0.0">
  <name>Ginsberg</name>
  <description>
        Ginsberg Mobile App
  </description>
  <author email="support@ginsberg.io" href="http://www.ginsberg.io/">
      ScotGov
   </author>
  <content src="index.html"/>
  
  <plugin name="InAppBrowser" value="org.apache.cordova.inappbrowser"/>
  <plugin name="NetworkStatus" value="org.apache.cordova.network-information"/>
  <plugin name="SpinnerPlugin" value="it.mobimentum.phonegapspinnerplugin"/>
  <plugin name="spinnerplugin" value="it.mobimentum.phonegapspinnerplugin"/>
  <plugin name="Device" value="org.apache.cordova.device"/>
  
  <!--preference name="WebSecurity" value="disable"/-->
  
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <preference name="android-minSdkVersion" value="14"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="deployment-target" value="7.0"/>
  <preference name="fullscreen" value="true" />
  <preference name="orientation" value="portrait" />
  <preference name='windows-target-version' value='8.1' />
  <preference name="windows-publisher-id" value="ScotGov" />
  <preference name="windows-publisher-display-name" value="Ginsberg" />

  <feature name="Logger">
    <param name="ios-package" value="CDVLogger" />
  </feature>

  <feature name="Console">
    <param name="ios-package" value="CDVLogger" />
  </feature>

  <feature name="StatusBar">
    <param name="ios-package" onload="true" value="CDVStatusBar"/>
  </feature>
  
  <feature name="DatePicker">
    <param name="ios-package" value="DatePicker"/>
  </feature>

  <feature name="DatePickerPlugin">
    <param name="android-package" value="com.sharinglabs.cordova.plugin.datepicker.DatePickerPlugin"/>
  </feature>
  
  <feature name="http://api.phonegap.com/1.0/network"/>
  <feature name="http://api.phonegap.com/1.0/notification"/>
  
  <platform name="ios">
	 <access origin="*"/>
     <!-- iOS 8.0+ -->
     <!-- iPhone 6 Plus  -->
     <icon height="180" src="res/icons/ios/icon-60@3x.png" width="180"/>
     <!-- iOS 7.0+ -->
     <!-- iPhone / iPod Touch  -->
     <icon height="60" src="res/icons/ios/icon-60.png" width="60"/>
     <icon height="120" src="res/icons/ios/icon-60@2x.png" width="120"/>
     <!-- iPad -->
     <icon height="76" src="res/icons/ios/icon-76.png" width="76"/>
     <icon height="152" src="res/icons/ios/icon-76@2x.png" width="152"/>
     <!-- iOS 6.1 -->
     <!-- Spotlight Icon -->
     <icon height="40" src="res/icons/ios/icon-40.png" width="40"/>
     <icon height="80" src="res/icons/ios/icon-40@2x.png" width="80"/>
     <!-- iPhone / iPod Touch -->
     <icon height="57" src="res/icons/ios/icon.png" width="57"/>
     <icon height="114" src="res/icons/ios/icon@2x.png" width="114"/>
     <!-- iPad -->
     <icon height="72" src="res/icons/ios/icon-72.png" width="72"/>
     <icon height="144" src="res/icons/ios/icon-72@2x.png" width="144"/>
     <!-- iPhone Spotlight and Settings Icon -->
     <icon height="29" src="res/icons/ios/icon-small.png" width="29"/>
     <icon height="58" src="res/icons/ios/icon-small@2x.png" width="58"/>
     <!-- iPad Spotlight and Settings Icon -->
     <icon height="50" src="res/icons/ios/icon-50.png" width="50"/>
     <icon height="100" src="res/icons/ios/icon-50@2x.png" width="100"/>
     <!-- images are determined by width and height. The following are supported -->
     <splash height="480" src="res/splash/ios/Default~iphone.png" width="320"/>
     <splash height="960" src="res/splash/ios/Default@2x~iphone.png" width="640"/>
     <splash height="1024" src="res/splash/ios/Default-Portrait~ipad.png" width="768"/>
     <splash height="2048" src="res/splash/ios/Default-Portrait@2x~ipad.png" width="1536"/>
     <splash height="768" src="res/splash/ios/Default-Landscape~ipad.png" width="1024"/>
     <splash height="1536" src="res/splash/ios/Default-Landscape@2x~ipad.png" width="2048"/>
     <splash height="1136" src="res/splash/ios/Default-568h@2x~iphone.png" width="640"/>
     <splash height="1334" src="res/splash/ios/Default-667h.png" width="750"/>
     <splash height="2208" src="res/splash/ios/Default-736h.png" width="1242"/>
     <splash height="1242" src="res/splash/ios/Default-Landscape-736h.png" width="2208"/>
  </platform>

  <platform name="android">
    <access origin="*"/>
  
	<icon density="ldpi" src="res/icons/android/Android App Icon.png"/>
    <icon density="mdpi" src="res/icons/android/Android App Icon.png"/>
    <icon density="hdpi" src="rres/icons/android/Android App Icon.png"/>
    <icon density="xhdpi" src="res/icons/android/Android App Icon.png"/>
  
    <!-- you can use any density that exists in the Android project -->
    <splash density="land-hdpi" src="res/splash/android/splash1.png"/>
    <splash density="land-ldpi" src="res/splash/android/splash1.png"/>
    <splash density="land-mdpi" src="res/splash/android/splash1.png"/>
    <splash density="land-xhdpi" src="res/splash/android/splash1.png"/>

    <splash density="port-hdpi" src="res/splash/android/splash1.png"/>
    <splash density="port-ldpi" src="res/splash/android/splash1.png"/>
    <splash density="port-mdpi" src="res/splash/android/splash1.png"/>
    <splash density="port-xhdpi" src="res/splash/android/splash1.png"/>
  </platform>

  <platform name="wp8">
    <access origin="*"/>
  
    <splash src="res/splash/wp8/splash768x1280.png" width="768" height="1280"/>
	
	<icon src="res/icons/wp8/icon99.png" width="99" height="99" />
	<icon src="res/icons/wp8/icon159.png" width="159" height="159" />
  </platform>

  <platform name="windows8">
	<access origin="*"/>
  
    <splash src="res/splash/windows8/splash868x420.png" width="868" height="420"/>
 	<splash src="res/splash/windows8/splash620x300.png" width="620" height="300"/>
 	<splash src="res/splash/windows8/splash540x1116.png" width="540" height="1116"/>
 	<splash src="res/splash/windows8/splash420x868.png" width="420" height="868"/>
 	<splash src="res/splash/windows8/splash300x620.png" width="300" height="620"/>
 	<splash src="res/splash/windows8/splash1116x540.png" width="1116" height="540"/>
 	<splash src="res/splash/windows8/splash1152x1920.png" width="1152" height="1920"/>
 	
	<icon src="res/icons/windows8/icon30.png" width="30" height="30" />
	<icon src="res/icons/windows8/icon50.png" width="50" height="50" />
	<icon src="res/icons/windows8/icon70.png" width="70" height="70" />
	<icon src="res/icons/windows8/icon106.png" width="106" height="106" />
	<icon src="res/icons/windows8/icon120.png" width="120" height="120" />
	<icon src="res/icons/windows8/icon150.png" width="150" height="150" />
	<icon src="res/icons/windows8/icon170.png" width="170" height="170" />
	<icon src="res/icons/windows8/icon310.png" width="310" height="310" />
	<icon src="res/icons/windows8/icon360.png" width="360" height="360" />
	<icon src="res/icons/windows8/icon310x150.png" width="310" height="150" />
		
	<icon src="res/icons/windows8/icon210.png" width="210" height="210" />
	<icon src="res/icons/windows8/icon240x120.png" width="240" height="120" />
	<icon src="res/icons/windows8/icon24.png" width="24" height="24" />
	<icon src="res/icons/windows8/icon270.png" width="270" height="270" />
	
	<icon src="res/icons/windows8/icon42.png" width="42" height="42" />
	<icon src="res/icons/windows8/icon434x210.png" width="434" height="210" />

	<icon src="res/icons/windows8/icon54.png" width="54" height="54" />
	<icon src="res/icons/windows8/icon558x270.png" width="558" height="270" />

	<icon src="res/icons/windows8/icon90.png" width="90" height="90" />
	
	<icon src="res/tiles/windows8/icon744x360.png" width="744" height="360" />
 </platform>

  <platform name="blackberry10">
  
    <access uri="http://localhost" subdomains="true" />
    <access uri="https://www.ginsberg.io" subdomains="true" />
    <access uri="https://api.ginsberg.io" subdomains="true" />
    <access uri="https://platform.ginsberg.io" subdomains="true" />
	<access uri="http://analytics.localytics.com" subdomains="true" />
	
  
    <!-- Add a rim:splash element for each resolution and locale you wish -->
    <!-- http://developer.blackberry.com/html5/documentation/rim_splash_element.html -->
    <rim:splash src="bb/splash-768x1280.png"/>
	
    <icon src="bb/icon86.png"/>
    <icon src="bb/icon150.png"/>
  </platform>

  <preference name="auto-hide-splash-screen" value="true"/>
  <preference name="SplashScreenDelay" value="3000"/>
</widget>
